@model IEnumerable<ParfumBD.Web.Models.Perfume>
@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a ParfumBD</h1>
    <p>Descubre nuestra exclusiva colección de fragancias.</p>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <h2>Perfumes Destacados</h2>
    </div>
</div>

<div class="row">
    @foreach (var perfume in Model.Take(4))
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(perfume.Imagen))
                {
                    <img src="@perfume.Imagen" class="card-img-top" alt="@perfume.Nombre">
                }
                else
                {
                    <img src="~/images/perfume-placeholder.jpg" class="card-img-top" alt="@perfume.Nombre">
                }
                <div class="card-body">
                    <h5 class="card-title">@perfume.Nombre</h5>
                    <p class="card-text">@perfume.Marca</p>
                    <p class="card-text fw-bold">$@perfume.Precio.ToString("N2")</p>
                    <a asp-controller="Perfumes" asp-action="Details" asp-route-id="@perfume.IdPerfume" class="btn btn-primary">Ver Detalles</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="row mt-4">
    <div class="col-md-12 text-center">
        <a asp-controller="Perfumes" asp-action="Index" class="btn btn-outline-primary">Ver Todos los Perfumes</a>
    </div>
</div>